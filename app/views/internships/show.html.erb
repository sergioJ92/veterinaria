<%- model_class = Internship -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name("Fecha de Hospitalizacion") %>:</strong></dt>
  <dd><%= @internship.intership_date %></dd>
  <dt><strong><%= model_class.human_attribute_name("Fecha de Alta") %>:</strong></dt>
  <dd><%= @internship.dischargeDate %></dd>
  <dt><strong><%= model_class.human_attribute_name("Detalles") %>:</strong></dt>
  <dd><%= @internship.deail %></dd>
  <dt><strong><%= model_class.human_attribute_name("Id Mascota") %>:</strong></dt>
  <dd><%= @internship.pet_id %></dd>
</dl>

<%= link_to t('.back', :default => t("Volver")),
              internships_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("Editar")),
              edit_internship_path(@internship), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("Eliminar")),
              internship_path(@internship),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Seguro?')) },
              :class => 'btn btn-danger' %>
