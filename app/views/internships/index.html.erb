<%- model_class = Internship -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:intership_date) %></th>
      <th><%= model_class.human_attribute_name(:dischargeDate) %></th>
      <th><%= model_class.human_attribute_name(:deail) %></th>
      <th><%= model_class.human_attribute_name(:pet_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @internships.each do |internship| %>
      <tr>
        <td><%= link_to internship.id, internship_path(internship) %></td>
        <td><%= internship.intership_date %></td>
        <td><%= internship.dischargeDate %></td>
        <td><%= internship.deail %></td>
        <td><%= internship.pet_id %></td>
        <td><%=l internship.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      internship_path(internship), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_internship_path(internship), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      internship_path(internship),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_internship_path,
            :class => 'btn btn-primary' %>
