<%- model_class = Internship -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Hospitalizacion' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('Id') %></th>
      <th><%= model_class.human_attribute_name('Fecha de Hospitalizacion') %></th>
      <th><%= model_class.human_attribute_name('Fecha de Alta') %></th>
      <th><%= model_class.human_attribute_name('Detalles') %></th>
      <th><%= model_class.human_attribute_name('Id Mascota') %></th>
      <th><%=t '.actions', :default => t("Acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @internships.each do |internship| %>
      <tr>
        <td><%= link_to internship.id, internship_path(internship) %></td>
        <td><%= internship.intership_date %></td>
        <td><%= internship.dischargeDate %></td>
        <td><%= internship.deail %></td>
        <td><%= internship.pet_id %></td>
        <td>
          <%= link_to t('.show', :default => t("Mostrar")),
                      internship_path(internship), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_internship_path(internship), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("Eliminar")),
                      internship_path(internship),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Seguro?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Nueva Hospitalizacion")),
            new_internship_path,
            :class => 'btn btn-primary' %>
