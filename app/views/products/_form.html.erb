<%= form_with(model: product, local: true, :html => { :class => "form-horizontal products" }) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Nombre, :class => 'control-label col-lg-2'%>
    <div class="col-lg-10">
      <%= form.text_field :name, id: :product_name, :class => 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :Precio, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.text_field :price, id: :product_price, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
      <%= form.label :Detalle, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.text_field :detail, id: :product_detail, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
      <%= form.label :Cantidad, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.number_field :quantity, id: :product_quantity, :class => 'form-control' %>
    </div>
  </div>

  
  <div class="form-group">
    <%a = "Tipo Producto"%>
    <%= form.label a,  :class => 'control-label col-lg-2'%>
    <div class="col-lg-10">

      <%= form.collection_select :type_product_id, TypeProduct.all, :id, :name, {}, {:class => 'form-control'} %>
    </div>
  </div>
  
  <div class= "field">
    <div class="col-lg-offset-2 col-lg-2">
      <%= form.submit 'Agregar', :class => 'btn btn-primary' %>
    
    </div>
  </div>
<% end %>
