<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Rol</th>
      <th>Id Asociado</th>
      <th>Convertir Veterinario</th>
      <th>Convertir Alamacenero</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><%= user.data_id %></td>
        <td><%= link_to 'Convertir Veterinario', id: user.id %></td>
        <td><%= link_to 'Convertir Almacenero', '/admin/users_convert/'+user.id.to_s%></td>
      </tr>
    <% end %>
  </tbody>
</table>

