<%= form_for @service, :html => { :class => "form-horizontal service" } do |f| %>

  <% if @service.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @service.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Nombre", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label "Detalles", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :detail, :class => 'form-control' %>
    </div>
    <%=f.error_span(:detail) %>
  </div>
  <div class="form-group">
    <%= f.label "Tipo de servicio", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :typeServices, :class => 'form-control' %>
    </div>
    <%=f.error_span(:typeServices_id) %>
  </div>



  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Aceptar", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("Cancelar")),
                services_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
