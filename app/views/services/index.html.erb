        <td>
          <%= link_to t('.show', :default => t("Mostrar")),
                      service_path(service), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_service_path(service), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("Eliminar")),
                      service_path(service),
                      :method => :delete,
