<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Servicios" %></h1>
</div>
<table class="table table-striped">
<!--
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name("Id") %></th>
