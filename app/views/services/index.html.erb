  <tbody>
    <% @services.each do |service| %>

      <!--div class="row"-->
        <div class="col s12 m5">
          <div class="card">
            <div class="card-image">
              <img src="peinado.jpg">
              <span class="card-title"><%= service.name%></span>
            </div>
            <div class="card-content">
              <p>Servicio: <%=service.name%></p>
              <p>Descripcion:</p>
              <p><%=service.detail %></p>
              <p></p>
            </div>
            <div class="card-action">
                <!---<%= link_to t('.show', :default => t("Mostrar")),
                            service_path(service)%>-->
                <%= link_to t('.edit', :default => t("Editar")),
                            edit_service_path(service)%>
                <%= link_to t('.destroy', :default => t("Eliminar")),
                            service_path(service),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Seguro?')) }
                            %>
            </div>
          </div>
        </div>
      <!--/div-->

