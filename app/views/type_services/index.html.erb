<%- model_class = TypeService -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Tipo de servicio" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name("Id") %></th>
      <th><%= model_class.human_attribute_name("Nombre") %></th>
      <th><%=t '.actions', :default => t("Acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @type_services.each do |type_service| %>
      <tr>
        <td><%= link_to type_service.id, type_service_path(type_service) %></td>
        <td><%= type_service.name %></td>
        <td><%=l type_service.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("Mostrar")),
                      type_service_path(type_service), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_type_service_path(type_service), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("Eliminar")),
                      type_service_path(type_service),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Seguro?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Crear")),
            new_type_service_path,
            :class => 'btn btn-primary' %>
