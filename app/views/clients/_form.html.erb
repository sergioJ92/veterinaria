<%= form_with(model: client, local: true) do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> Prohibido este cliente de ser guardado:</h2>

      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Nombre' %>
    <%= form.text_field :name, id: :client_name %>
  </div>

  <div class="field">
    <%= form.label 'Carnet' %>
    <%= form.text_field :ci, id: :client_ci %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
