<p id="notice"><%= notice %></p>

<h1>Tipo de productos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_products.each do |type_product| %>
      <tr>
        <td><%= type_product.name %></td>
        <td><%= link_to 'Show', type_product %></td>
        <td><%= link_to 'Edit', edit_type_product_path(type_product) %></td>
        <td><%= link_to 'Destroy', type_product, method: :delete, data: { confirm: 'Estas seguro que quieres eliminar el Tipo de producto'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'nuevo tipo producto', new_type_product_path, :class => 'btn btn-primary' %>
